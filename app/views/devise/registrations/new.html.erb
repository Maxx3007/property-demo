<section class="form-auth text-center">


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <h1 class="h3 mb-3 font-weight-normal">Please Sign Up</h1>

  <%= render "devise/shared/error_messages", resource: resource %>


    <div class="form-label-group ">
    <%= f.text_field :first_name, autofocus: true, class: "form-control", id: "inputEmail", placeholder: "First Name" %>
    </div>


    <div class="form-label-group ">
    <%= f.text_field :last_name, placeholder: "Last Name", class: "form-control", id: "inputPassword" %>
    </div>


    <div class="form-label-group ">
    <%= f.email_field :email, autocomplete: "email", placeholder: "Email", class: "form-control", id: "inputPassword" %>
    </div>

    <div class="form-label-group ">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "form-control", id: "inputPassword" %>
    </div>


    <div class="form-label-group">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password Confirmation", class: "form-control", id: "inputPassword" %>
    </div>


  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</section>
